<Window x:Class="StudentHiveWpf.Views.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Vezetéknév:"/>
            <TextBox x:Name="LastNameTextBox" />

            <TextBlock Text="Keresztnév:"/>
            <TextBox x:Name="FirstNameTextBox" />

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" />

            <TextBlock Text="Jelszó:"/>
            <PasswordBox x:Name="PasswordBox" />

            <Button Content="Regisztráció" Click="RegisterButton_Click" Margin="0,10,0,0"/>
            <Button Content="Vissza" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
