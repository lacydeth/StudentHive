<Window x:Class="StudentHiveWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bejelentkezés" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"     
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="AliceBlue"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Togglebutton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush 
                    Stretch="None"/>
        </Border.Background>
        <Border CornerRadius="10"                    
        BorderThickness="4"
        Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#000000" Offset="0"/>
                    <GradientStop Color="#CFC9C9" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Felhasználók Kezelése"
                           Foreground="Black"
                           FontSize="17"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    <Button x:Name="btnClose"                          
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2" Click="btnClose_Click"
                        >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#556D48"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#000000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnLogout"                          
                            BorderThickness="0"
                            Cursor="Hand"
                            Grid.Column="2" Click="btnLogout_Click"
                            Margin="-50,0,0,0">         
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#556D48"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#000000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                    CornerRadius="15"
                    Background="{TemplateBinding Background}">
                                    <Image Source="icons/logout.png"
                       Width="12" Height="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
                    <StackPanel Grid.Row="1">
                        <DataGrid x:Name="UserListBox" Background="Transparent" AutoGenerateColumns="False"
          IsReadOnly="True" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="54"/>
                                <DataGridTextColumn Header="Vezetéknév" Binding="{Binding LastName}" Width="200"/>
                                <DataGridTextColumn Header="Keresztnév" Binding="{Binding FirstName}" Width="200"/>
                                <DataGridTextColumn Header="IsActive" Binding="{Binding IsActive}" Width="300"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="300"/>
                                <DataGridTextColumn Header="CreatedAt" Binding="{Binding CreatedAt}" Width="300"/>

                                <DataGridTemplateColumn Header="Műveletek" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button ToolTip="Módosítás" Width="30" Height="30" Margin="2" Click="btnedit_Click">
                                                    <Image Source="/icons/view.png" Stretch="Uniform"/>
                                                </Button>
                                                <ToggleButton ToolTip="Státusz váltás" Width="40" Height="20" Margin="2"
                                                                IsChecked="{Binding IsActive}"
                                                                Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"/>
                                                <Button ToolTip="Jelszó változtatás" Width="30" Height="30" Margin="2" Click="btnPassword_Click">
                                                    <Image Source="/icons/keyblack.png" Stretch="Uniform"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
            </Grid>
        </Border>

    </Border>
</Window>
