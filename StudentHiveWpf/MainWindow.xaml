<Window x:Class="StudentHiveWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Felhasználók" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <Button Content="Felhasználók betöltése" Click="LoadUsers_Click" Margin="10"/>
            <ListBox x:Name="UserListBox" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding FirstName}" />
                            <TextBlock FontSize="14" Text="{Binding LastName}" />
                            <TextBlock Foreground="Gray" Text="{Binding Email}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
