<Window x:Class="StudentHiveWpf.PasswordChangePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentHiveWpf"
        mc:Ignorable="d"
        Title="PasswordChangePage" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Width="300" HorizontalAlignment="Left" Margin="10">
            <TextBlock Text="Új jelszó létrehozása" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="NewPasswordInput" Width="200" Margin="5" />
            <TextBox x:Name="ConfirmPasswordInput" Width="200" Margin="5" />
            <Button Content="Új jelszó beállítása" Width="150" Margin="5" Click="ChangePassword_Click"/>
            <Button Content="Bezárás" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
